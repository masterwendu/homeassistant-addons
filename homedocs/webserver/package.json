{
  "name": "webserver",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && cp -r ./src/templates ./dist/templates && mkdir -p ./dist/public",
    "biome": "biome check .",
    "biome-fix": "biome check --apply .",
    "lint": "biome lint .",
    "lint-fix": "biome lint --apply .",
    "format": "biome format .",
    "format-fix": "biome format --write ."
  },
  "dependencies": {
    "@elysiajs/static": "1.0.3",
    "elysia": "1.0.15",
    "zod": "3.23.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.1",
    "bun-types": "1.1.5"
  },
  "module": "src/index.js"
}
